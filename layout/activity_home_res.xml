<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical"
    tools:context=".home_res">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#BA1E3D"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="277dp"
            android:layout_marginTop="-10dp"

            app:srcCompat="@drawable/banner"
            tools:layout_editor_absoluteX="-26dp"
            tools:layout_editor_absoluteY="1dp" />

        <ImageView

            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="345dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/menu"
            tools:layout_editor_absoluteX="-26dp"
            tools:layout_editor_absoluteY="1dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="129dp"
            android:layout_height="130dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-38dp"
            app:srcCompat="@drawable/circle1"
            tools:layout_editor_absoluteX="-3dp"
            tools:layout_editor_absoluteY="-35dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="75dp"
            android:layout_height="90dp"
            app:srcCompat="@drawable/circle2"
            tools:layout_editor_absoluteX="-26dp"
            tools:layout_editor_absoluteY="1dp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="299dp"
            android:layout_height="130dp"
            android:layout_marginLeft="-55dp"
            android:layout_marginTop="100dp"
            app:srcCompat="@drawable/cirlce3"
            tools:layout_editor_absoluteX="-26dp"
            tools:layout_editor_absoluteY="1dp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="200dp"
            android:layout_height="113dp"
            android:layout_marginLeft="-5dp"
            android:layout_marginTop="110dp"
            app:srcCompat="@drawable/demo_profile"
            tools:layout_editor_absoluteX="-26dp"
            tools:layout_editor_absoluteY="1dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="130dp"
            android:text="Hey,"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="160dp"
            android:text="Itachi Uchiha"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/sell"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="15dp"
            app:srcCompat="@drawable/box" />

        <ImageView
            android:id="@+id/netincome"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="200dp"
            app:srcCompat="@drawable/box" />

        <ImageView
            android:id="@+id/Monitoring"
            android:layout_width="328dp"
            android:layout_height="204dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="530dp"
            app:srcCompat="@drawable/monitor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:layout_marginTop="760dp"
            >
            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:id="@+id/searchFoodButton"
                android:text="Add Food"
                android:textSize="23sp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:backgroundTint="#FFFFFF"
                app:cornerRadius = "60dp"/>
        </LinearLayout>



    </RelativeLayout>



</LinearLayout>